pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // Check out your source code from version control (e.g., Git).
                checkout scm
            }
        }

        stage('Build') {
            steps {
                // Build your Spring Boot application with Maven.
                sh "cd backend/achat && mvn clean package"
            }
        }


        stage('SonarQube Analysis') {
            steps {
                script {
                    def mavenHome = tool 'M2_HOME'
                    withSonarQubeEnv(credentialsId: 'sonarqube_token') {
                        sh "cd backend/achat && ${mavenHome}/bin/mvn sonar:sonar -Dsonar.login=${env.SONARQUBE_AUTH_TOKEN}"
                    }
                }
            }
        }
    }
}
